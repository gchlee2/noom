doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/home.css")
        script(defer src="/socket.io/socket.io.js") 
        script(defer src="/public/js/app.js")
    body
        header
            h1 Noom
        main 
            div#welcome
                form#nickForm
                    input(placeholder="nickname", required, type="text")
                    button Save              
                br
                form#enterForm
                    input(type="text", required, placeholder="room name")
                    button Enter Room 
                h4 Open Rooms: 
                ul 
            div#room
                h3
                div.chatArea
                    ul              
                form
                    input.send-input(placeholder="message", required, type="text")
                    button.send-btn Send
                button#btnLeaveRoom 방나가기


        